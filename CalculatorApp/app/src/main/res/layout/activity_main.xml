<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:editable="false"
        android:gravity="end"
        android:text="0"
        android:lines="1"
        android:textAlignment="textEnd"
        android:textColor="#FFF"
        android:textSize="70sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/editText1"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText1"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num7"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num8"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num9"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="9"
                android:textSize="25sp" />

            <Button
                android:id="@+id/ce"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_orange"
                android:onClick="onClick"
                android:text="CE"
                android:textColor="#FFF"
                android:textSize="25sp" />

            <Button
                android:id="@+id/cl"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_orange"
                android:onClick="onClick"
                android:text="CL"
                android:textColor="#FFF"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText1"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num4"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="4"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num5"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num6"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/percent"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_grey"
                android:onClick="onClick"
                android:text="%"
                android:textSize="25sp" />

            <Button
                android:id="@+id/divide"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_grey"
                android:onClick="onClick"
                android:text="/"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText1"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num1"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num2"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="2"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num3"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/power"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_grey"
                android:onClick="onClick"
                android:text="^"
                android:textSize="25sp" />

            <Button
                android:id="@+id/multiply"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_grey"
                android:onClick="onClick"
                android:text="*"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num0"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="0"
                android:textSize="25sp" />

            <Button
                android:id="@+id/decimal"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="."
                android:textSize="25sp" />

            <Button
                android:id="@+id/minus"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_grey"
                android:onClick="onClick"
                android:text="-"
                android:textSize="25sp" />

            <Button
                android:id="@+id/plus"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_grey"
                android:onClick="onClick"
                android:text="+"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/equal"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_border_white"
                android:onClick="onClick"
                android:text="="
                android:textSize="25sp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
